<h3>{{recommendations.title}}</h3>
{{#each recommendations.quote}}
    <p>
      <span class="label label-warning">
          <img class="location" alt="IE" src="{{unbound country_icon_path}}"/> {{unbound initial_date}}</span>
      <b>{{unbound by_name}} - {{unbound by_role}} &#64; {{unbound by_organization}}</b>
    </p>
    <div class="quote-container">
      {{#each paragraph}}
          <p class="quote">{{unbound this}}</p>
        {{/each}}
    </div>
{{/each}}